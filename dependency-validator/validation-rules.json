{
  "rules": {
    "no-recent-commit": {
      "warn-at-months": 12,
      "fail-at-months": 18
    },
    "few-yearly-commits": {
      "warn-at-count": 2,
      "fail-at-count": null
    },
    "no-recent-package-release": {
      "warn-at-months": 18,
      "fail-at-months": 24
    },
    "repository-archived": {
      "fail": true
    },
    "repository-is-fork": {
      "warn": true
    },
    "package-deprecated": {
      "fail": true
    },
    "single-recent-author": {
      "warn": true
    },
    "repository-not-identified": {
      "warn": true
    },
    "repository-not-found": {
      "warn": true
    },
    "issue-lead-time-bugs": {
      "metric": "issue-lead-time",
      "type": ["bug"],
      "exclude-labels": ["security", "vulnerability"],
      "aggregation": "median",
      "min-closed-issues": 5,
      "warn-at-days": 100,
      "fail-at-days": 365
    },
    "issue-lead-time-security-bugs": {
      "metric": "issue-lead-time",
      "type": ["bug"],
      "include-labels": ["security", "vulnerability"],
      "aggregation": "median",
      "min-closed-issues": 5,
      "warn-at-days": 14,
      "fail-at-days": 28
    }  
  }
}