{
  "failure-rules": {
    "fail-build-at-percentage": 70,
    "min-dependencies-analyzed": 5,
    "fail-on-missing-metadata": true,
    "fail-on-api-error": false,
    "rule-severity-weights": {
      "error": 1.0,
      "warning": 0.5,
      "info": 0.0
    },
    "rule-groups": {
      "sustainability": {
        "weight": 0.4
      },
      "security": {
        "weight": 0.4
      },
      "license-compliance": {
        "weight": 0.2
      }
    },
    "evaluation-mode": "weighted-average"
  }
}